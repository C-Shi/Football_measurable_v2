<% include ../partials/header %>

<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <form action="/register" method="POST">
        <h4>Invite User</h4>
        <div class="form-group">
          <label>Email: </label>
          <input type="email" class="form-control" name="email" placeholder="Enter an valid email">
        </div>
        <div class="form-group">
          <label>Full Name: </label>
          <input type="text" class="form-control" name="name" placeholder="User's full name">
        </div>
        <div class="form-group">
        <div class="custom-control custom-switch d-inline">
          <input type="checkbox" class="custom-control-input" id="admin" name="admin">
          <label class="custom-control-label" for="admin">Adminstrator &nbsp;</label>
        </div>
        <div class="custom-control custom-switch d-inline">
          <input type="checkbox" class="custom-control-input" id="coach" name="coach" checked>
          <label class="custom-control-label" for="coach">Coach &nbsp;</label>
        </div>
        </div>

        <button class="btn btn-sm btn-success">Add User</button>
      </form>
    </div>
  </div>
</div>


<% include ../partials/footer %>